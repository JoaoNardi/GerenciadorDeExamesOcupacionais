<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/11.0.14-internal"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.joaonardi.gerenciadorocupacional.controller.TipoCertificadoController">

    <children>
        <Button fx:id="btnSalvar" layoutX="100.0" layoutY="345.0" mnemonicParsing="false"
                onAction="#handleSalvarCertificado" text="Salvar"/>
        <Button fx:id="btnCancelar" layoutX="230.0" layoutY="345.0" mnemonicParsing="false"
                onAction="#handleCancelarCertificado" text="Cancelar"/>
        <Label layoutX="14.0" layoutY="9.0" text="Tipo Certificado">
            <font>
                <Font size="18.0"/>
            </font>
        </Label>
        <Label layoutX="119.0" layoutY="78.0" text="Complete os dados">
            <font>
                <Font size="14.0"/>
            </font>
        </Label>
        <Label layoutX="59.0" layoutY="111.0" text="Nome:"/>
        <TextField fx:id="inputNome" layoutX="110.0" layoutY="107.0" prefHeight="25.0" prefWidth="165.0"
                   promptText="Tipo de Certificado"/>
        <Label layoutX="22.0" layoutY="142.0" text="Periodicidade:"/>
        <ChoiceBox fx:id="inputPeriodicidade" layoutX="111.0" layoutY="138.0" prefHeight="25.0" prefWidth="165.0"/>
    </children>

</AnchorPane>
