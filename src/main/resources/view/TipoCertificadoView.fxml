<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.joaonardi.gerenciadorocupacional.controller.TipoCertificadoController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <Button fx:id="btnSalvar" layoutX="118.0" layoutY="346.0" mnemonicParsing="false" onAction="#handleSalvarCertificado" text="Salvar" />
        <Button fx:id="btnCancelar" layoutX="245.0" layoutY="346.0" mnemonicParsing="false" onAction="#handleCancelarCertificado" text="Cancelar" />
        <Label layoutX="14.0" layoutY="9.0" text="Certificado">
            <font>
                <Font size="18.0" />
            </font>
        </Label>
        <Label layoutX="90.0" layoutY="111.0" text="Nome:" />
        <TextField fx:id="inputNome" layoutX="142.0" layoutY="107.0" prefHeight="25.0" prefWidth="165.0" promptText="Tipo de Certificado" />
        <Label layoutX="150.0" layoutY="78.0" text="Complete os dados">
            <font>
                <Font size="14.0" />
            </font>
        </Label>
        <Label layoutX="53.0" layoutY="142.0" text="Periodicidade:" />
        <ChoiceBox fx:id="inputPeriodicidade" layoutX="142.0" layoutY="138.0" prefHeight="25.0" prefWidth="165.0" />
    </children>

</AnchorPane>
